      </div>
    </div>
  </section>

  <style>
    /* Page-specific styles for homepage */
    .hero {
      background: linear-gradient(135deg, var(--ocean-deep) 0%, var(--ocean-blue) 100%);
      color: var(--white);
      padding: 6rem 0 4rem;
      margin-top: -1px;
    }

    .hero h1 {
      font-size: 3.5rem;
      color: var(--white);
      margin-bottom: 1rem;
      line-height: 1.1;
      text-align: center;
    }

    .hero .accent {
      color: var(--gold-light);
      display: block;
      margin-top: 0.5rem;
    }

    .hero p {
      font-size: 1.25rem;
      color: var(--sand-warm);
      margin-bottom: 2rem;
      font-weight: 300;
      text-align: center;
    }

    .hero-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 3rem;
    }

    .hero-stats {
      margin-top: 2rem;
    }

    .hero-stats article {
      text-align: center;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      margin: 0;
    }

    .hero-stats h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--gold-light);
      margin-bottom: 0.5rem;
    }

    .hero-stats p {
      font-size: 0.9rem;
      color: var(--sand-warm);
      margin: 0;
    }

    .why-sunshine-coast {
      background: var(--sand-warm);
    }

    .image-placeholder {
      aspect-ratio: 4/5;
      background: linear-gradient(135deg, var(--ocean-blue) 0%, var(--ocean-light) 100%);
      border-radius: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--white);
      font-size: 1.5rem;
      font-family: var(--font-serif);
      margin: 0;
    }

    .blog-image-placeholder {
      height: 200px;
      background: linear-gradient(135deg, var(--ocean-light) 0%, var(--sand-warm) 100%);
      border-radius: 0.5rem;
    }

    .blog-preview {
      background: var(--sand-light);
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2.5rem;
      }

      .hero p {
        font-size: 1.1rem;
      }
    }
  </style>
</Layout>
