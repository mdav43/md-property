---
import '../styles/global.css';
import '../styles/layout.css';
import '../styles/components.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Jack McGhee Real Estate - Premium property services on the Sunshine Coast" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="luxury">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Jack McGhee Real Estate</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col">
  <!-- Compact, information-forward navigation -->
  <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-stone/30 shadow-premium">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo - refined typography -->
        <a href="/" class="flex flex-col leading-none hover:opacity-80 transition-opacity duration-200">
          <span class="font-serif text-xl font-bold text-charcoal tracking-tight">Jack McGhee</span>
          <span class="font-sans text-[0.6875rem] text-champagne uppercase tracking-widest font-medium">Real Estate</span>
        </a>
        
        <!-- Navigation links - compact, text-first -->
        <ul class="flex items-center gap-8">
          <li><a href="/" class="text-sm font-medium text-graphite hover:text-charcoal-light transition-colors duration-200">Home</a></li>
          <li><a href="/about" class="text-sm font-medium text-graphite hover:text-charcoal-light transition-colors duration-200">About</a></li>
          <li><a href="/blog" class="text-sm font-medium text-graphite hover:text-charcoal-light transition-colors duration-200">Insights</a></li>
          <li>
            <a href="#contact" class="inline-flex items-center px-4 py-2 text-sm font-semibold text-charcoal bg-champagne hover:bg-champagne-dark transition-colors duration-200 rounded">
              Contact
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="flex-1">
    <slot />
  </main>

  <!-- Dense, structured footer -->
  <footer id="contact" class="bg-charcoal text-stone-warm mt-20">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-12">
      <!-- Dense 3-column grid for maximum information -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
        <!-- Column 1: Firm overview -->
        <div>
          <h3 class="font-serif text-lg font-semibold text-champagne-light mb-3">Jack McGhee Real Estate</h3>
          <p class="text-sm leading-relaxed text-stone/90 mb-3">Premium property services on the Sunshine Coast</p>
          <p class="text-sm leading-relaxed text-stone/80">20+ years experience delivering exceptional results in Australia's most competitive markets.</p>
        </div>
        
        <!-- Column 2: Contact information - structured -->
        <div>
          <h4 class="font-sans text-sm font-semibold text-champagne-light uppercase tracking-wide mb-3">Contact</h4>
          <dl class="space-y-2 text-sm">
            <div class="flex items-start gap-2">
              <dt class="text-stone/70 min-w-[3rem]">Phone</dt>
              <dd class="text-stone-warm">0400 123 456</dd>
            </div>
            <div class="flex items-start gap-2">
              <dt class="text-stone/70 min-w-[3rem]">Email</dt>
              <dd class="text-stone-warm">jackmcghee@propertypro.com.au</dd>
            </div>
            <div class="flex items-start gap-2">
              <dt class="text-stone/70 min-w-[3rem]">Office</dt>
              <dd class="text-stone-warm">Mooloolaba, Sunshine Coast QLD</dd>
            </div>
          </dl>
        </div>
        
        <!-- Column 3: Quick navigation -->
        <div>
          <h4 class="font-sans text-sm font-semibold text-champagne-light uppercase tracking-wide mb-3">Navigation</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/" class="text-stone-warm hover:text-champagne transition-colors duration-200">Home</a></li>
            <li><a href="/about" class="text-stone-warm hover:text-champagne transition-colors duration-200">About Jack</a></li>
            <li><a href="/blog" class="text-stone-warm hover:text-champagne transition-colors duration-200">Market Insights</a></li>
          </ul>
        </div>
      </div>
      
      <!-- Bottom bar - subtle divider -->
      <div class="pt-6 border-t border-champagne/20">
        <p class="text-sm text-stone/70 text-center">&copy; {new Date().getFullYear()} Jack McGhee Real Estate. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>
